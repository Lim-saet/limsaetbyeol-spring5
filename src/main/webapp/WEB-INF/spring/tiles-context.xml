<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
 "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<!-- dtd:document type definition 문서 형태 정의 -->
<tiles-definitions> 
	<definition name="tiles_layout" templateExpression="/WEB-INF/views/tiles/layouts/layout.jsp">
		<put-attribute name="header" expression="/WEB-INFO/view/tiles/layouts/header.jsp"/>
		<put-attribute name="content" expression="" />
		<put-attribute name="footer" expression="/WEB-INFO/view/tiles/layouts/footer.jps"/>
	</definition>
	<!--*.tiles는 컨트롤러의 String 리턴값으로 사용됩니다 jsp대신에 뷰단을 대체 -->
	<!-- home.tiles 또는 join.tiles 이런 리턴을 사용하면 아래 {1} = home, join -->
	<definition name="*.tiles" extends="tiles_layout">
		<put-attribute name="content" expression="/WEB-INF/view/tiles/{1}.jps"/>
	</definition>
	<!-- board/board_insert.tiles 이런 리턴을 사용하면 아래 {1}/{2}=board/board_insert -->
	<definition name="*/*.tiles" extends="tiles_layput">
		<put-attribute name="content" expression="/WEB-INFO/views/tiles/{1}/{2}"/>
	</definition>
	<!-- 사이트가 복잡해지면, 3단계 타일즈를 사용합니다(아래) -->
	<definition name="*/*/*._tiles" extends="tiles_layout">
		<put-attribute name="content" expression="/WEB-INFO/views/tiles/{1}/{2}/{3}"/>
	</definition>
</tiles-definitions>
 
 